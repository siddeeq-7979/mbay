                                            <i class="icon-social-facebook me-1"></i>{{lang('sign_up_with_facebook')}}</button>
                                        <p class="orvia"><span>{{lang('or_via_email')}}</span></p>
                                        <!-- end fb or-->
                                        <div class="login-register-form">
                                            <form action="#" method="post">
                                                <div class="mb-3">
                                                    <input class="form-control shadow-none" type="text" name="user-name" placeholder="{{lang('full_name')}}">
                                                </div>
                                                <div class="mb-3">
                                                    <input class="form-control shadow-none" type="text" name="user-name" placeholder="{{lang('your_email')}}">
                                                </div>
                                                <div class="mb-3">
                                                    <input class="form-control shadow-none" type="password" name="user-password" placeholder="{{lang('password')}}">
                                                </div>
                                                <div class="mb-3">
                                                    <input class="form-control shadow-none" type="number" name="user-password" placeholder="{{lang('mobile_number_we_will_sent_you_a_verificationcode')}}">
                                                </div>

